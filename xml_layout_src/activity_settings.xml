<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings"
    android:background="#FFFFFF">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/title_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_title_label"
            android:gravity="top|center_horizontal"
            android:padding="8dp"
            android:text="Settings"
            android:textSize="30sp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:backgroundTint="#FFFFFF"
            app:borderWidth="0dp"
            app:rippleColor="#00FFFFFF"
            app:srcCompat="@drawable/ic_clear_black_24dp"
            android:elevation="0dp"
            app:elevation="0dp"
            android:onClick="go_home"/>

        <TextView
            android:id="@+id/max_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:layout_below="@+id/title_settings"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:textSize="30sp"
            android:text="Max Distance"/>

        <Button
            android:id="@+id/button_1k"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/max_distance"
            android:text="1k"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:background="@drawable/more_rounded_corners"
            android:onClick="set1k"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/button_200m"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignRight="@+id/button_1k"
            android:layout_marginRight="120dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/max_distance"
            android:text="200m"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:background="@drawable/more_rounded_corners"
            android:onClick="set200"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/button_2k"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignLeft="@+id/button_1k"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/max_distance"
            android:text="2k"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:background="@drawable/more_rounded_corners"
            android:onClick="set2k"
            android:textAllCaps="false"/>

        <TextView
            android:id="@+id/total_walked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:layout_below="@+id/button_1k"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:textSize="30sp"
            android:text="Total Distance Walked"/>

        <TextView
            android:id="@+id/total_walked_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:layout_below="@+id/total_walked"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:textSize="50sp"
            android:textColor="#000000"/>


    </RelativeLayout>

</RelativeLayout>